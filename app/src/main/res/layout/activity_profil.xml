<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/exit_profil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/arrow_back"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="30dp"
        android:padding="8dp" />

    <ImageView
        android:id="@+id/profileImageView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black"
        android:textSize="80sp"
        android:text="R"
        android:gravity="center"
        android:fontFamily="sans-serif-black"
        android:background="@drawable/circle_img"/>

    <TextView
        android:id="@+id/usernameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:text="Username"
        android:textSize="18sp"
        android:layout_below="@id/profileImageView"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/NikTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:text="NIK"
        android:textSize="18sp"
        android:layout_below="@id/usernameTextView"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/githubUsernameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:text="GitHub Username"
        android:textSize="18sp"
        android:layout_below="@id/NikTextView"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/emailTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:text="Email"
        android:textSize="18sp"
        android:layout_below="@id/githubUsernameTextView"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/logoutButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:layout_below="@id/emailTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"/>
</RelativeLayout>
