<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".RegisterActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/shape1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"/>

    <ImageView
        android:id="@+id/R_img_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/arrow_back"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"/>

    <TextView
        android:id="@+id/R_txt_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/R_img_1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="Selamat Datang"
        android:textAlignment="center"
        android:textColor="@color/title"
        android:textSize="24dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/R_txt_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/R_txt_1"
        android:layout_centerHorizontal="true"
        android:text="Untuk pengguna baru silakan isi kolom registrasi berikut."
        android:textSize="18dp"
        android:layout_marginTop="5dp"
        android:textAlignment="center"
        android:padding="20dp"
        android:textColor="@color/teks"/>

    <LinearLayout
        android:id="@+id/ly_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:layout_below="@id/R_txt_2">

        <EditText
            android:id="@+id/edt_fullname"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="   Enter Full Name"
            android:background="@drawable/button_1"
            android:backgroundTint="@color/white"
            android:paddingLeft="15dp"/>

        <EditText
            android:id="@+id/edt_githubname"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:hint="   Enter Your Github Name"
            android:background="@drawable/button_1"
            android:backgroundTint="@color/white"
            android:paddingLeft="15dp"/>

        <EditText
            android:id="@+id/edt_nik"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:hint="   Enter Your NIK"
            android:background="@drawable/button_1"
            android:backgroundTint="@color/white"
            android:paddingLeft="15dp"/>

        <EditText
            android:id="@+id/edt_email"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:hint="   Enter Your E-mail"
            android:background="@drawable/button_1"
            android:backgroundTint="@color/white"
            android:paddingLeft="15dp"/>

        <EditText
            android:id="@+id/edt_password"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:hint="   Enter Your New Password"
            android:background="@drawable/button_1"
            android:backgroundTint="@color/white"
            android:paddingLeft="15dp" />

        <EditText
            android:id="@+id/cnf_password"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:hint="   Confirm Your Password"
            android:background="@drawable/button_1"
            android:backgroundTint="@color/white"
            android:paddingLeft="15dp" />

    </LinearLayout>

    <Button
        android:id="@+id/R_btn_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:layout_below="@+id/ly_1"
        android:layout_centerHorizontal="true"
        android:width="200dp"
        android:textStyle="bold"
        android:textSize="18sp"
        android:background="@drawable/button_1"
        android:textColor="@color/white"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_below="@id/R_btn_1"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Apakah kamu sudah memiliki akun ?"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/Register_to_Login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="  Login"
            android:textStyle="bold"
            android:textColor="@color/button"/>

    </LinearLayout>
    
</RelativeLayout>